<html>
<style>
body {
	font-family: arial;
	background-image: url(/squares.png);
	color: #fff;
}


h1 {
	margin: 2.5rem 1rem ;
	padding: 1rem;
	color: rgb(173, 192, 219);;
	background: #fff;
	border-radius: 10px;
}
#widgets {
	margin: 1rem;
}

h3 {
	font-size: 0.5em;
	text-align: left;
	margin: 10px 0;
	padding: 0;
}

.widget {
	 border: 1px solid #c9c9c9;
	background: #fff;
	width: 300px;
	display: inline-block;
	vertical-align: top;
	border-radius: 3px;
	margin	: 5px;
	color: rgb(131, 131, 131);
}

.widget.wide {
	width: 100%;
}


.widget.wide .direction {
	width: 48%;
	display: inline-block;
	vertical-align: top;
}

.widget .detail {
	font-size: 0.3em;
	color: #aaa;
}


.widget h2 {
	padding: 0 0 10px 0;
	font-size: 1em;
	margin: 0px;
	background: #f3f3f3;
	padding: 8px;
	border-radius: 3px 3px 0 0 ;
}

.widget.fullscreen {
	width: 50%;
	height: 40%;
	vertical-align: center;
}

.widget ul.trains {
	padding: 0;
	margin: 0;
}
.widget .due {
	border: 1px solid #aaa;
	border-radius: 2px;
	background: #444;
	width: 50px;
	color: #ddd;
	padding: 5px;
	text-align: center;
	display:inline-block;
	margin: 5px;
}

.widget.wide {
	display: block;
	width: auto;
}

.widget li {
	list-style: none;
	font-size: 0.3em;
	width: 100%;
	text-align: left;
	margin: 0px;
	line-height: 15px;
}

.widget li:nth-child(odd)  {
	background-color: #f2f2f2;
}

.widget li.Central {
	background: #DC241F;
}
.widget li.Bakerloo {
	background: #894E24;
}
.widget li.Circle {
	background: #FFCE00;
}
.widget li.District {
	background: #007229;
}
.widget li.HammersmithandCity {
	background: #D799AF;
}
.widget li.Jubilee {
	background: #868F98;
}
.widget li.Metrpolitan {
	background: #751056;
}
.widget li.Northern {
	background: #000000;
}
.widget li.Piccadilly {
	background: #0019A8;
}
.widget li.Victoria {
	background: #00A0E2;
}
.widget li.WaterlooandCity {
	background: #76D0BD;
}
.widget li.Overground {
	background: #894E24;
}

.widget li.DLR {
	background: #00AFAD;
}



.value {
	font-size: 2.6rem;
	padding: 10px 0;
	font-weight:bold;
	text-align: center;
}


</style>

<head>
<title>Status</title>
</head>
<body class="up">
	<div id="widgets">
	</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/jquery.js"></script>
<script>
  var socket = io.connect('http://localhost');
  socket.on('widget', function (data) {
  	for(item in data) {
  		$('#'+item).html(data[item]);
  	}
  });
</script>
</body>
</html>
